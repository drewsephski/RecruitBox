{
  "name": "recruitbox",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --bun dev:vite",
    "dev:vite": "vite",
    "dev:server": "bun run --bun server/index.ts",
    "build": "bun run --bun build:client && bun run --bun build:server",
    "build:client": "vite build",
    "build:server": "bun build ./server/index.ts --outdir ./netlify/functions --target bun --format esm --external @polar-sh/sdk --external @prisma/client",
    "preview": "bun run --bun vite preview",
    "postinstall": "prisma generate",
    "netlify:build": "bun install && bun run build",
    "netlify:dev": "netlify dev"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.56.0",
    "@google/genai": "^1.30.0",
    "@hono/node-server": "^1.19.6",
    "@netlify/functions": "^3.0.0",
    "@polar-sh/sdk": "^0.41.5",
    "@prisma/client": "^6.19.0",
    "@tailwindcss/vite": "^4.1.17",
    "dotenv": "^17.2.3",
    "hono": "^4.10.6",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@types/bun": "^1.0.7",
    "@types/node": "^22.19.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/smooth-scrollbar": "^8.2.5",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "bun-types": "^1.3.2",
    "netlify-cli": "^17.0.0",
    "postcss": "^8.5.6",
    "prisma": "^6.19.0",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": "^1.0.0"
  },
  "bun": {
    "target": "bun"
  }
}
